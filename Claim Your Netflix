<script>
const PRIMARY  = "https://www.effectivegatecpm.com/b3tf3q5h?key=d30075f9a8298d2e723defde10af4e33"; // Adsterra
const FALLBACK = "https://otieu.com/4/4203960"; // Monetag fallback

const cta  = document.getElementById("cta");
const fill = document.getElementById("fill");
const secs = document.getElementById("secs");
let total = 8, t = total, hasFired = false;

function tick(){
  t = Math.max(0, t - 0.1);
  fill.style.width = ((total - t) / total * 100).toFixed(1) + "%";
  secs.textContent = Math.ceil(t);
  if (t <= 0){
    clearInterval(timer);
    cta.classList.add("pulse");
    cta.setAttribute("aria-disabled","false");
    cta.addEventListener("click", (e)=>{
      e.preventDefault();
      if (hasFired) return;
      hasFired = true;
      openNow();
    });
  }
}
const timer = setInterval(tick, 100); tick();

function tryBlank(url){
  try{ const win = window.open(url, "_blank", "noopener,noreferrer"); return !!win; }
  catch(_) { return false; }
}

function openNow(){
  const ok = tryBlank(PRIMARY);
  if (ok) return;
  try{
    window.location.assign(PRIMARY);
    setTimeout(()=>{
      if (document.visibilityState === "visible") window.location.assign(FALLBACK);
    }, 1200);
  }catch(_){
    tryBlank(FALLBACK) || (window.location.href = FALLBACK);
  }
}

// Rotate messages
const stock = document.getElementById("stockText");
const msgs = [
  "🔥 10 users claimed in the last hour!",
  "🎁 Your Netflix promo code is waiting!",
  "⚡ Only few free passes left!",
  "🎬 Unlock your free access now!"
];
let i = 0; setInterval(()=>{ stock.textContent = msgs[i++ % msgs.length]; }, 4000);
</script>
