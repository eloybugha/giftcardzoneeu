<script>
/*------------- Links -------------*/
const PRIMARY  = "https://www.effectivegatecpm.com/b3tf3q5h?key=d30075f9a8298d2e723defde10af4e33"; // Adsterra
const FALLBACK = "https://otieu.com/4/4203960"; // Monetag

/*------------- Elements -------------*/
const cta = document.getElementById("cta");
const bar = document.getElementById("bar");
const secs = document.getElementById("secs");
const stock = document.getElementById("stock");

let total=8, t=total, hasFired=false, fallbackTimer=null;
const OPENED_KEY="v4_opened";

/* Countdown + enable */
function tick(){
  t=Math.max(0, t-0.1);
  bar.style.width=((total-t)/total*100).toFixed(1)+"%";
  secs.textContent=Math.ceil(t);
  if(t<=0){
    clearInterval(timer);
    cta.classList.add("pulse");
    cta.setAttribute("aria-disabled","false");
  }
}
const timer=setInterval(tick,100); tick();

/* Rotate hype messages */
const msgs=[
  "üî• 9 users unlocked a code in the last 10 minutes!",
  "üéÅ New rewards drop every hour ‚Äî don‚Äôt miss out!",
  "‚ö° Your device is eligible for a special bonus!",
  "üé¨ Premium stream access: ready to reveal!"
];
let i=0; setInterval(()=>{ stock.textContent=msgs[i++%msgs.length]; }, 3800);

/* Open logic: prefer new-tab (avoids back traps). Fallback to same-tab replace */
function tryBlank(url){ try{ const w=window.open(url,"_blank","noopener,noreferrer"); return !!w; }catch(_){ return false; } }
function clearFallback(){ if(fallbackTimer){ clearTimeout(fallbackTimer); fallbackTimer=null; } }

function openNow(){
  if(hasFired) return;
  hasFired=true;
  sessionStorage.setItem(OPENED_KEY,"1");

  // 1) new tab
  if(tryBlank(PRIMARY)) return;

  // 2) same-tab with replace (no history entry). If still visible after delay, replace to fallback.
  try{
    window.location.replace(PRIMARY);
    fallbackTimer=setTimeout(()=>{
      if(document.visibilityState==="visible"){ window.location.replace(FALLBACK); }
    },1200);
  }catch(_){
    // 3) last resort
    tryBlank(FALLBACK) || (window.location.replace(FALLBACK));
  }
}

/* Attach on click/touch after countdown */
cta.addEventListener("click", (e)=>{ if(cta.getAttribute("aria-disabled")==="true") return; e.preventDefault(); openNow(); }, {passive:false});
cta.addEventListener("touchstart", (e)=>{ if(cta.getAttribute("aria-disabled")==="true") return; e.preventDefault(); openNow(); }, {passive:false});

/* Prevent re-open on browser back (BFCache) */
document.addEventListener("visibilitychange", ()=>{ if(document.visibilityState!=="visible") clearFallback(); });
window.addEventListener("pagehide", clearFallback);
window.addEventListener("pageshow", ()=>{ if(sessionStorage.getItem(OPENED_KEY)==="1"){ hasFired=true; clearFallback(); }});
</script>
